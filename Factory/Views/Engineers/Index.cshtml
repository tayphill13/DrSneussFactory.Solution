@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>The Engineers:</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been hired yet!</h3>
}

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
}
<hr>
<input type="button" value="Add new engineer" onclick="location.href='@Url.Action("Create", "Engineers")';" class="btn btn-outline-dark" />