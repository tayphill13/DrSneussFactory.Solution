@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add new Engineer</h1>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.FavoriteTool)
    @Html.TextBoxFor(model => model.FavoriteTool)

    <input type="submit" value="Add new engineer" class="btn btn-outline-dark" />
}
<hr>
<input type="button" value="Engineer List" onclick="location.href='@Url.Action("Index", "Engineers")';" class="btn btn-primary" />
<input type="button" value="Return Home" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-primary" />
